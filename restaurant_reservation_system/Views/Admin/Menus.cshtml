@using restaurant_reservation_system.Models.Dto

@model List<MenuDto>

<div class="d-flex gap-3 mb-3">
    @foreach(var menu in Model)
    {
        <button class="btn btn-outline-primary" onclick="filterMenu('menu.Name')">@menu.Name</button>
    }
</div>

<div id="menuList">
    @foreach (var menu in Model)
    {
        <div class="card mb-4" data-type="@menu.Name">
            <div class="card-header">
                <h5 class="mb-0">@menu.Name</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">@menu.Description</p>

                @if (ViewBag.Foods != null)
                {
                    <div class="mt-3">
                        <h6 class="mb-3">Foods</h6>
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                            @foreach (var food in ViewBag.Foods)
                            {
                                @if (food.MenuId == menu.Id)
                                {
                                    <div class="col">
                                        <div class="card h-100 border-0 bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title">@food.Name</h6>
                                                <p class="card-text small text-muted">@food.Description</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="badge bg-primary">$@food.Price</span>
                                                    <div>
                                                        @if (food.ContainsGluten)
                                                        {
                                                            <span class="badge bg-warning">Gluten</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                @if (ViewBag.Drinks != null)
                {
                    <div class="mt-3">
                        <h6 class="mb-3">Drinks</h6>
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                            @foreach (var drink in ViewBag.Drinks)
                            {
                                @if (drink.MenuId == menu.Id)
                                {
                                    <div class="col">
                                        <div class="card h-100 border-0 bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title">@drink.Name</h6>
                                                <p class="card-text small text-muted">@drink.Description</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="badge bg-primary">$@drink.Price</span>
                                                    <div>
                                                        @if (drink.IsAlcoholic)
                                                        {
                                                            <span class="badge bg-danger">Alcolohic</span>
                                                        }
                                                        @if (drink.ContainsCaffeine)
                                                        {
                                                            <span class="badge bg-warning">Caffeine</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>


    }
</div>

<script>
    function filterMenu(type) {
        document.querySelectorAll("#menuList .card").forEach(card => {
            card.style.display = (card.dataset.type === type) ? "block" : "none";
        });
    }
</script>

<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
</style>