@using restaurant_reservation_system.Models.Dto

@model List<MenuDto>

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex gap-2">
                <a href="/Admin/Menus" class="btn @(ViewBag.SelectedMenuId == null ? "btn-primary" : "btn-outline-primary")">
                    All Menus
                </a>
                @foreach (var menu in Model)
                {
                    <a href="@Url.Action("Menus", new { id = menu.Id })"
                       class="btn @(ViewBag.SelectedMenuId == menu.Id ? "btn-primary" : "btn-outline-primary")">
                        @menu.Name
                    </a>
                }
            </div>
        </div>
    </div>

    @if (ViewBag.SelectedMenuId == null)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var menu in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@menu.Name</h5>
                            <p class="card-text">@menu.Description</p>
                            <a href="@Url.Action("Menus", new { id = menu.Id })" class="btn btn-sm btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        @foreach (var menu in Model.Where(m => m.Id == ViewBag.SelectedMenuId))
        {
            <div class="card menu-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@menu.Name</h4>
                    <div class="btn-group">

                        <form asp-action="DeleteMenu" asp-controller="Admin" method="post" class="d-inline" id="deleteForm_@menu.Id">
                            <input type="hidden" name="id" value="@menu.Id" />
                            <button 
                                type="button" 
                                class="btn btn-sm btn-outline-danger"
                                onclick="showDeleteModal(@menu.Id)">Delete
                        </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    
                    @if (ViewBag.Foods != null)
                    {
                        <div class="mt-3">
                            <h6 class="mb-3">Foods</h6>
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                                @foreach (var food in ViewBag.Foods)
                                {
                                    @if (food.MenuId == menu.Id)
                                    {
                                        <div class="col">
                                            <div class="card h-100 border-0 bg-light">
                                                <div class="card-body">
                                                    <h6 class="card-title">@food.Name</h6>
                                                    <p class="card-text small text-muted">@food.Description</p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="badge bg-primary">$@food.Price</span>
                                                        <div>
                                                            @if (food.ContainsGluten)
                                                            {
                                                                <span class="badge bg-warning">Gluten</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }

                    @if (ViewBag.Drinks != null)
                    {
                        <div class="mt-3">
                            <h6 class="mb-3">Drinks</h6>
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                                @foreach (var drink in ViewBag.Drinks)
                                {
                                    @if (drink.MenuId == menu.Id)
                                    {
                                        <div class="col">
                                            <div class="card h-100 border-0 bg-light">
                                                <div class="card-body">
                                                    <h6 class="card-title">@drink.Name</h6>
                                                    <p class="card-text small text-muted">@drink.Description</p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="badge bg-primary">$@drink.Price</span>
                                                        <div>
                                                            @if (drink.IsAlcoholic)
                                                            {
                                                                <span class="badge bg-danger">Alcolohic</span>
                                                            }
                                                            @if (drink.ContainsCaffeine)
                                                            {
                                                                <span class="badge bg-warning">Caffeine</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                    }
                </div>
            </div>
        }
    }
</div>

@section Scripts{
    <script>
        function showDeleteModal(menuId) {
            const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            document.getElementById('confirmDeleteBtn').onclick = function () {
                document.getElementById(`deleteForm_${menuId}`).submit();
            };
            modal.show();
        }
    </script>
}

<style>
    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
</style>