@{
    ViewData["Title"] = "Drinks";
}

@using restaurant_reservation_system.Models.Dto

@model DrinkDto

<div class="container-fluid mt-4">
    <div class="row">

        <div class="col-md-8">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @if (ViewBag.drinks != null)
                {
                    @foreach (var drink in ViewBag.drinks)
                    {
                        <div class="col">
                            <div class="card admin-drink-card h-100">
                                <div class="card-header text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">@drink.Name</h5>
                                        @if (drink.IsAlcoholic)
                                        {
                                            <span class="badge bg-danger">Alcoholic</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <small class="text-muted">Description:</small>
                                        <p class="mb-1">@drink.Description</p>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Calories:</small>
                                        <p class="mb-1">@drink.Calories cal</p>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Price:</small>
                                        <p class="mb-1">$@drink.Price</p>
                                    </div>
                                    <div class="mb-2">
                                        <span class="badge @(drink.ContainsCaffeine ? "bg-warning" : "bg-success")">
                                            @(drink.ContainsCaffeine ? "Contains Caffeine" : "Caffeine Free")
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <span class="badge @(drink.ContainsSugar ? "bg-warning" : "bg-success")">
                                            @(drink.ContainsSugar ? "Contains Sugar" : "Sugar Free")
                                        </span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-end gap-2">
                                        
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-primary"
                                                onclick="loadUpdateForm('Drink', @drink.Id)">
                                            Edit
                                        </button>
                                        <form asp-action="DeleteDrink" asp-controller="Admin" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@drink.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow position-sticky" style="top: 1rem;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Add New Drink</h5>

                    <form method="post" asp-action="CreateDrink">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Calories" class="form-label"></label>
                            <input asp-for="Calories" class="form-control" type="number" />
                            <span asp-validation-for="Calories" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Menu</label>
                            <select asp-for=MenuId class="form-select">
                                <option value="0" selected>Select a menu</option>
                                @foreach (var menu in ViewBag.Menus)
                                {
                                    <option value="@menu.Id">@menu.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsAlcoholic" type="checkbox" class="form-check-input" />
                                <label asp-for="IsAlcoholic" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="ContainsCaffeine" type="checkbox" class="form-check-input" />
                                <label asp-for="ContainsCaffeine" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="ContainsSugar" type="checkbox" class="form-check-input" />
                                <label asp-for="ContainsSugar" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Create drink</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
</style>