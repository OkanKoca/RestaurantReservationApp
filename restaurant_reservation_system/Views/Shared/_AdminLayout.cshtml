<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/restaurant_reservation_system.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("token")) && Context.Session.GetString("role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Reservations">Reservations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Foods">Foods</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Drinks">Drinks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Menus">Menus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Tables" asp-route-id="" asp-route-date="">Tables</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("token")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Go back to Home Page</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Toast Container - Sağ Alt -->
    <div id="adminToastContainer" style="position: fixed; bottom: 20px; right: 20px; z-index: 9999; display: flex; flex-direction: column-reverse; gap: 10px; max-width: 380px;"></div>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <partial name="_DeleteConfirmationModal" />
        <partial name="_UpdateModal" />
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/admin-toast.js" asp-append-version="true"></script>

    <script>
        async function loadUpdateForm(entityType, id) {
            try {
                var response = await fetch('/Admin/Get' + entityType + 'UpdateForm/' + id);
                if (!response.ok) throw new Error('Failed to load form');

                var formHtml = await response.text();
                document.getElementById('updateModalBody').innerHTML = formHtml;
                document.getElementById('updateModalTitle').textContent = 'Update ' + entityType;

                var modal = new bootstrap.Modal(document.getElementById('updateModal'));
                modal.show();
            } catch (error) {
            console.error('Error:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            var connection = new signalR.HubConnectionBuilder()
            .withUrl("https://localhost:7284/adminHub")
            .withAutomaticReconnect()
            .build();

            connection.on("NewReservation", function(data) {
                console.log("New reservation:", data);
            if (typeof AdminToast !== 'undefined') {
                    AdminToast.newReservation(data);
            }
        });

        connection.on("ReservationCanceled", function(data) {
            console.log("Reservation canceled:", data);
            if (typeof AdminToast !== 'undefined') {
                AdminToast.canceledReservation(data);
            }
        });

        connection.start()
        .then(function() { console.log("SignalR connected"); })
        .catch(function(err) { console.error("SignalR error:", err); });

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
