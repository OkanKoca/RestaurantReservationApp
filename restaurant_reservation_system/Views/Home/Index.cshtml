@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section position-relative py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Our Restaurant</h1>
                <p class="lead mb-4">Experience fine dining with our exquisite menu and comfortable atmosphere.</p>
                <div class="d-grid gap-2 d-md-flex">
                    @if (string.IsNullOrEmpty(Context.Session.GetString("token")))
                    {
                        <a asp-controller="GuestReservation" asp-action="Create" class="btn btn-primary btn-lg px-4">Book a Table</a>
                        <a asp-controller="Users" asp-action="Register" class="btn btn-outline-primary btn-lg px-4">Register Now</a>
                    }
                    else
                    {
                        <a asp-controller="UserReservation" asp-action="Create" class="btn btn-primary btn-lg px-4">Book a Table</a>
                    }
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <img src="~/img/restaurant-hero.jpg" class="img-fluid rounded shadow" alt="Restaurant">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Fine Dining</h5>
                        <p class="card-text">Experience our exquisite menu crafted by world-class chefs.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-glass-cheers fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Premium Bar</h5>
                        <p class="card-text">Choose from our selection of finest wines and cocktails.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-concierge-bell fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Top Service</h5>
                        <p class="card-text">Our staff is dedicated to providing exceptional service.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>